<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgFoto"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txtPlaca"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#009688" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtMarca"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/txtPlaca"
        android:layout_alignLeft="@+id/txtPlaca" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtModelo"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/txtMarca"
        android:layout_alignLeft="@+id/txtMarca"
        android:layout_alignStart="@+id/txtMarca" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtColor"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/txtModelo"
        android:layout_alignLeft="@+id/txtMarca" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtPrecio"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/txtColor"
        android:layout_alignLeft="@+id/txtMarca" />

</RelativeLayout><!-- From: file:/C:/Users/MiguelAl/Documents/AndroidStudioProjects/Concesionario/app/src/main/res/layout/item_carro.xml -->